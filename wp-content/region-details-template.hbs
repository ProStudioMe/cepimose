            {{/if}}
          </td>
          {{#if post.acf.hepatitis_a}}
            <td class="field-value {{post.acf.hepatitis_a.value}}"></td>
          {{/if}}
        </tr>

        <tr>
          <td class="field-label">
            {{#if post.acf.hepatitis_b_label}}
