            {{#if post.acf.rumena_mrzlica_label}}
              {{post.acf.rumena_mrzlica_label}}
            {{/if}}
          </td>
          {{#if post.acf.rumena_mrzlica}}
            <td class="field-value {{post.acf.rumena_mrzlica.value}}"></td>

